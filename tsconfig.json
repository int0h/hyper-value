{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "inlineSourceMap": true,
        "inlineSources": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist",
        "declaration": true,
        "lib": [
            "es6"
        ],
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/all.ts",
        "./src/index.ts",
        "./src/hs/**/index.ts",
        "./src/hs/test.ts"
    ]
}
